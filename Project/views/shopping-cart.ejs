<div class="modal <%= typeof toggleModal !== "undefined" && toggleModal === true ? "modalOn" : "" %>"  id="myModal">
    <div class="modal-dialog " style="width: 70%; max-width:1000px">
        <div class="modal-content ">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Checkout</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body ">
                <% if (cartfoods && totalCost!=0    ){%>
                    <div class="row">
                        <div class="mt-2 col-sm-12">
                            <ul class="list-group">
                                <% cartfoods.forEach((cartfood)=>{%>

                                <li class="list-group-item">
                                    <strong><%=cartfood.qty%></strong>
                                    <strong><%=cartfood.item.name%></strong>
                                    <strong>$<%=cartfood.cost%></strong>
                                    <a href="/increase/<%=cartfood.item._id%>" class="btn btn-outline-primary">+</a>
                                    <div class="btn-group">
                                        <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                                        <ul class="dropdown-menu">
                                            <li><a href="/reduce/<%=cartfood.item._id%>" id="reduce">Reduce by 1</a></li>
                                            <li><a href="/remove/<%=cartfood.item._id%>" id="remove">Remove All</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <%});%>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mt-2 col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
                            <strong>Total: $<%=totalCost%></strong>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="mt-2 col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
                            <a href="/checkout" class="btn btn-success">Checkout</a>
                        </div>
                    </div>
                <% } else {%>
                    cart is empty
                <% } %>

            </div>

        </div>


    </div>
</div>